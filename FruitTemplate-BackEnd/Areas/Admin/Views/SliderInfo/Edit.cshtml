@model SliderInfoEditVM

@{
    ViewData["Title"] = "Edit";
}




<div class="container mt-5">
<form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">

        <label>New SliderInfo Title</label>
        <input asp-for="Title" class="form-control">
        <span class="text-danger" asp-validation-for="Title"></span>

        <label>New SliderInfo Description</label>
        <input asp-for="Description" class="form-control">
        <span class="text-danger" asp-validation-for="Description"></span>

    </div>
    <button class="btn btn-primary mr-2">Submit</button>
    <a asp-action="Index" class="btn btn-primary text-white">back</a>
</form>
</div>

