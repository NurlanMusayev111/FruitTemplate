@model FactEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Edit">
        <div class="form-group">
            <label>Fact Icon</label>
            <input asp-for="Icon" class="form-control" placeholder="Add Fact name..">
            <span class="text-danger" asp-validation-for="Icon"></span>

            <label>Fact Title</label>
            <input asp-for="Title" class="form-control" placeholder="Add Fact name..">
            <span class="text-danger" asp-validation-for="Title"></span>

            <label>Fact Count</label>
            <input asp-for="Count" class="form-control" placeholder="Add Fact name..">
            <span class="text-danger" asp-validation-for="Count"></span>
        </div>
        <button class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">back</a>
    </form>
</div>
