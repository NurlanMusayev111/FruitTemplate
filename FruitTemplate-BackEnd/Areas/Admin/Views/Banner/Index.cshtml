@model BannerVM

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5 mx-5">
    <div class="create-category">
        <a asp-area="Admin" asp-controller="Banner" asp-action="Create" class="btn btn-success text-white" style="font-size:30px;width120px">+</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th> Banner Image </th>
                <th> Banner Title </th>
                <th> Banner Description</th>
                <th> Banner Price </th>
                <th> Operations </th>
            </tr>
        </thead>
        <tbody>
           
            <tr>
                <td class="py-1">
                    <img src="~/img/@Model.Image" style="height:120px;width:120px" />
                </td>

                <td class="py-1">
                    @Model.Title
                </td>

                <td class="py-1">
                    @Model.Description
                </td>

                <td class="py-1">
                    @Model.Price
                </td>


                <td>
                        <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-info text-white">Info</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">edit</a>
                    <form class="d-inline" asp-action="Delete" method="post" asp-route-id="@Model.Id">
                            <button type="submit" class="btn btn-danger text-white">delete</button>
                        </form>
                    </td>
            </tr>
            

        </tbody>
    </table>
</div>
