@model BannerDetailVM

@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create">
        <div class="form-group">

            <label class="mt-3" style="display:block">Banner Image</label>
            <img src="~/img/@Model.Image" style="height:300px;width:400px" alt="Alternate Text" />
            
            <label style="display:block">Banner Title</label>
            <input asp-for="Title" type="text" disabled class="form-control">

            <label class="mt-3">Banner Description</label>
            <input asp-for="Description" type="text" disabled class="form-control">

            <label class="mt-3">Banner Price</label>
            <input asp-for="Price" type="text" disabled class="form-control">

        </div>
        <a asp-action="Index" class="btn btn-primary text-white">back</a>
    </form>
</div>

